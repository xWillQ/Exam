<hibernate-configuration>

    <session-factory>
        <property name="connection.url">jdbc:h2:./aaa;MV_STORE=FALSE</property>
        <property name="connection.username">se</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="show_sql">true</property>

        <mapping resource="./mapping/Department.hbm.xml"/>
        <mapping resource="./mapping/Employee.hbm.xml"/>
        <mapping resource="./mapping/Number.hbm.xml"/>
    </session-factory>

</hibernate-configuration>